<%= form_for @resource, :html => { :class => "form-horizontal"} do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :host %>
        <%= f.text_field :host %>
    </div>
    <div class="field">
        <%= f.label "URL" %>
        <%= f.text_field :url %>
    </div>
    <div class="field">
        <%= f.label :domain %>
        <%= f.text_field :domain %>
    </div>
    <h3>Optionals</h3>
    <%= f.fields_for :optionals do |optional| %>
        <%= render 'optional_fields', :f => optional %>
        <%= link_to_add_association '<i class="icon-plus-sign"></i>'.html_safe, f, :optionals, :force_non_association_create => true %>
        </div></div>
    <% end %>
    <div class="actions">
      <%= f.submit :class => "btn" %>
    </div>
<% end %>
